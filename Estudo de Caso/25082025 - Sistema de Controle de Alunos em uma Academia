# Lista inicial de alunos

alunos = [
    {
        "nome": "Ana",
        "idade": 28,
        "altura": 1.65,
        "ativo": True,
        "avaliacoes": [8.5, 9.0, 8.2]
    },
    {
        "nome": "Carlos",
        "idade": 22,
        "altura": 1.80,
        "ativo": False,
        "avaliacoes": [7.0, 7.5, 8.0]
    }
]


# Função para adicionar novos alunos

def cadastro_aluno(alunos):
    nome = input(str('Informar nome do Aluno'))
    idade = input(int('Informar idade do aluno'))
    altura = input(float('Informar altura do aluno. Ex.: 1.77'))
    ativo = bool(True)
    avaliacoes = input(list(float('Informar notas das avaliações físicas. Ex.: 8.1, 7.5, 9.0')))

print(cadastro_aluno)
    

# Função de cálculo de média das avaliações

def calcular_media(avaliacoes):
    return sum(avaliacoes) / len(avaliacoes)


# Função para exibir dados de todos os alunos

def exibir_alunos(alunos):
    for aluno in alunos:
        print(f"Nome: {aluno['nome']}")
        print(f"Idade: {aluno['idade']}")
        print(f"Altura: {aluno['altura']}")
        print(f"Ativo: {aluno['ativo']}")
        print(f"Média avaliações: {calcular_media(aluno['avaliacoes']):.2f}")
        print("-"*20)


# Função para listar apenas os alunos ativos

def listar_ativos(alunos):
    ativos = [aluno for aluno in alunos if aluno['ativo']]
    return ativos


